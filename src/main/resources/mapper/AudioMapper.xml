<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace ="top.maniy.mapper.AudioMapper">




	<select id="findAudioByCategoryId" resultType="Audio">
		select * from audio WHERE categoryId=#{categoryId}
	</select>

	<select id="findQuestionLikeQuesName" resultType="Question" parameterType="String">
		SELECT * FROM audio WHERE quesName LIKE '%${quesName}%'
	</select>


	<select id="findAudioById" resultType="Audio">
		SELECT * FROM audio WHERE id = #{Id}
	</select>

	<select id="findAudioByCategoryIdRand" resultType="Audio">
		SELECT * FROM audio WHERE categoryId=#{categoryId} order by rand() limit #{num}
	</select>

	<insert id="saveAudio" parameterType="Audio">
		INSERT INTO audio
        <trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="userId != null" >
				userId,
			</if>
            <if test="userName != null" >
                userName,
            </if>
            <if test="categoryId != null" >
				categoryId,
            </if>
			<if test="url != null" >
				url,
			</if>
			<if test="photo != null" >
				photo,
			</if>
			<if test="audioName != null" >
				audioName,
			</if>
			<if test="audioDescribe != null" >
				audioDescribe,
			</if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="userId != null" >
				#{userId},
			</if>
			<if test="userName != null" >
				#{userName},
			</if>

			<if test="categoryId != null" >
				#{categoryId},
			</if>
			<if test="url != null" >
				#{url},
			</if>
			<if test="photo != null" >
				#{photo},
			</if>
			<if test="audioName != null" >
				#{audioName},
			</if>
			<if test="audioDescribe != null" >
				#{audioDescribe},
			</if>
        </trim>
	</insert>

	<delete id="deleteAudio">
		DELETE FROM audio WHERE id=#{id}
	</delete>

	<update id="updateAudio" parameterType="Audio">
		UPDATE audio
        <set>
			<if test="userId != null" >
				userId=#{userId},
			</if>
			<if test="userName != null" >
				userName=#{userName},
			</if>
			<if test="categoryId != null" >
				categoryId=#{categoryId},
			</if>
			<if test="url != null" >
				url=#{url},
			</if>
			<if test="photo != null" >
				photo=#{photo},
			</if>
			<if test="status != null" >
				status=#{status},
			</if>
			<if test="audioName != null" >
				audioName=#{audioName},
			</if>
			<if test="audioDescribe != null" >
				audioDescribe=#{audioDescribe},
			</if>
		</set>
		WHERE id =#{id}
	</update>
</mapper>